{
  "name": "hono_sambata",
  "type": "module",
  "scripts": {
    "dev": "vite && bun run bknd-typegen && bun run sync",
    "build": "vite build",
    "preview": "$npm_execpath run build && vite preview",
    "deploy": "$npm_execpath run build && wrangler deploy",
    "bknd-typegen": "PROXY=1 bunx bknd types",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "postinstall": "bun run bknd copy-assets --out public && bun run cf-typegen",
    "sync": "PROXY=1 bun bknd -- sync --force",
    "analyze": "bun run build && bunx wrangler deploy --dry-run"
  },
  "dependencies": {
    "bknd": "^0.19.0",
    "hono": "^4.10.7"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.2.3",
    "vite": "^7.2.4",
    "vite-bundle-analyzer": "^1.2.3",
    "vite-ssr-components": "^0.5.1",
    "wrangler": "^4.17.0"
  }
}

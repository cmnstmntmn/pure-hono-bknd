{
  "name": "hono_sambata",
  "type": "module",
  "scripts": {
    "dev:bknd-typegen": "PROXY=1 runx bknd types",
    "copy-assets": "bunx bknd copy-assets --out public",
    "sync": "PROXY=1 bun node_modules/.bin/bknd -- sync --force",
    "dev:all": "bun run dev:bknd-typegen && bun run dev:sync",
    "dev": "vite && dev:all",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "vite build && wrangler deploy && bun run sync",
    "bknd-typegen": "PROXY=1 $npm_execpath bknd types",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "postinstall": "bun run bknd copy-assets --out public && bun run cf-typegen",
    "analyze:build": "bun run build",
    "analyze:wrangler-dry": "bun wrangler deploy --dry-run",
    "analyze": "bun run analyze:build -- --mode analyze && bun run analyze:wrangler-dry"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "bknd": "^0.19.0",
    "hono": "^4.10.7",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@cloudflare/vite-plugin": "^1.15.3",
    "vite": "^7.2.4",
    "vite-bundle-analyzer": "^1.2.3",
    "vite-ssr-components": "^0.5.1",
    "wrangler": "^4.51.0"
  }
}
